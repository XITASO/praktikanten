@page "/tictactoe2"
@using PlayTogether.Web.Services
@inject GameService2 GameService2
@inject NavigationManager NavigationManager
@inject Roomservice Roomservice

<h3>Tic-Tac-Toe Game(Room 2)</h3>

<div style="margin-bottom: 15px;">
    <input placeholder="Player X Name" @bind="playerXInput" />
    <input placeholder="Player O Name" @bind="playerOInput" style="margin-left: 10px;" />
    <button class="restart-button" @onclick="SetPlayerNames" style="margin-left: 10px;">Set Player Names</button>
</div>

<div class="spectator-section" style="margin-bottom: 20px;">
    <input placeholder="Enter spectator name" @bind="spectatorInput" />
    <button class="restart-button" @onclick="SetSpectator" style="margin-left: 10px;">Set Spectator</button>
    <button class="restart-button" @onclick="ClearSpectator" style="margin-left: 10px;">Clear Spectator</button>
</div>

@if (!string.IsNullOrEmpty(GameService2.WinnerMessage))
{
<div class="winner-text">@GameService2.WinnerMessage</div>
}

<button class="restart-button" @onclick="GameService2.ResetGame" disabled="@IsSpectator">RESTART GAME</button>
<button class="restart-button" @onclick="GameService2.ResetScore" style="margin-left: 10px;" disabled="@IsSpectator">RESET SCORE</button>
<button class="restart-button" @onclick="LeafRoom" style="margin-left: 10px">Leave Room</button>

<div class="scoreboard" style="margin: 10px 0;">
    <strong>@GameService2.PlayerXName</strong>: @GameService2.ScoreX / <strong>@GameService2.PlayerOName</strong>: @GameService2.ScoreO
</div>
<div class="spiel-flaeche">
    @for (int row = 0; row < 3; row++)
    {
    int fixedRow = row;
    <div class="bord-reihe">
        @for (int col = 0; col < 3; col++)
        {
        int fixedCol = col;
        <button class="zelle"
                @onclick="() => MakeMoveIfAllowed(fixedRow, fixedCol)"
                disabled="@(!CanPlay)">
            @GameService2.Board[fixedRow, fixedCol]
        </button>
        }
    </div>
    }
</div>

@if (!string.IsNullOrEmpty(GameService2.SpectatorName))
{
<div class="spectator-info" style="margin-top: 10px; font-weight: bold; color: darkorange;">
    Spectator: @GameService2.SpectatorName is watching the game!
</div>
}

@code {
private string playerXInput = "";
private string playerOInput = "";
private string spectatorInput = "";
public bool Roomleaft = true;
private bool disposed = false;

private bool IsSpectator => !string.IsNullOrWhiteSpace(GameService2.SpectatorName);

private bool CanPlay =>
!IsSpectator &&
!string.IsNullOrWhiteSpace(GameService2.PlayerXName) &&
!string.IsNullOrWhiteSpace(GameService2.PlayerOName);

private void SetPlayerNames()
{
if (!string.IsNullOrWhiteSpace(playerXInput))
GameService2.PlayerXName = playerXInput.Trim();

if (!string.IsNullOrWhiteSpace(playerOInput))
GameService2.PlayerOName = playerOInput.Trim();

GameService2.ResetScore();
}

private void SetSpectator()
{
if (!string.IsNullOrWhiteSpace(spectatorInput))
{
GameService2.SetSpectatorName(spectatorInput);
spectatorInput = "";
}
}

private void ClearSpectator()
{
GameService2.ClearSpectator();
}

private void MakeMoveIfAllowed(int row, int col)
{
if (CanPlay)
{
GameService2.MakeMove(row, col);
}
}


protected override void OnInitialized()
{
GameService2.StateChanged += OnGameStateChanged;
Roomleaft = false;
}

private void OnGameStateChanged(object? sender, EventArgs e)
{
InvokeAsync(StateHasChanged);
}

public void LeafRoom()
{
    Roomservice.room2leafe();
    NavigationManager.NavigateTo("/tictactoe");
    Roomleaft = true;

}
public void Dispose()
{
GameService2.StateChanged -= OnGameStateChanged;
if (!disposed)
{
        

    if (!Roomleaft)
    {
        Roomservice.room2leafe();
    } disposed = true;
        
}
}

}

@implements IDisposable

<style>
    .spiel-flaeche {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 10px;
    }

    .bord-reihe {
        display: flex;
        gap: 10px;
    }

    .zelle {
        width: 90px;
        height: 90px;
        font-size: 2rem;
        background-color: #f0f0f0;
        border: 2px solid #333;
        border-radius: 8px;
        cursor: pointer;
        display: flex;
        justify-content: center;
        align-items: center;
        font-weight: bold;
    }

    .zelle:disabled {
        cursor: not-allowed;
        background-color: #ddd;
    }

    .winner-text {
        margin-top: 20px;
        font-size: 1.8rem;
        color: green;
        font-weight: bold;
        text-align: center;
    }

    .restart-button {
        margin: 15px 5px 15px 0;
        padding: 12px 24px;
        font-size: 1.1rem;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        display: inline-block;
    }

    .restart-button:disabled {
        cursor: not-allowed;
        background-color: #a0a0a0;
    }

    .restart-button:hover:not(:disabled) {
        background-color: #0056b3;
    }

    .spectator-section input {
        padding: 8px;
        margin-right: 8px;
        font-size: 1rem;
    }
</style>