@page "/tictactoe"
<h3>Tic-Tac-Toe Game</h3>

<div class="spiel-flaeche">
    @for (int reihe = 0; reihe < 3; reihe++)
    {
        <div class="bord-reihe">
            @for (int spalte = 0; spalte < 3; spalte++)//Für jedes Feld in einer der 3 Reihen, 3 Felder werden generiert
            {
                <button class="zelle" @onclick="() => MakeMove(reihe, spalte)">
                    @board[reihe, spalte]
                </button>
            }
        </div>
    }
</div>

@code{
    private string[,] board = new string[3, 3];
    private void MakeMove(int reihe, int spalte)
    {}
}
<style>
    .spiel-flaeche {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 10px;
    }

    .bord-reihe {
        display: flex;
        gap: 10px;
    }

    .zelle {
        width: 90px;
        height: 90px;
        font-size: 2rem;
        background-color: #f0f0f0;
        border: 2px solid #333;
        border-radius: 8px;
        cursor: pointer;
    }
</style>


